<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.trip_planner_back.mapper.FavoriteMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="favoriteId">
        insert into favorites
        values
            (default, #{userId}, #{spotId}, now())
    </insert>
    <select id="findByUserId" resultType="favorite">
        select
            favorite_id,
            user_id,
            spot_id,
            created_at
        from
            favorites
        where
            user_id = #{userId}
    </select>
    <delete id="deleteById">
        delete
        from
            favorites
        where
            user_id = #{userId}
            and spot_id = #{spotId}
    </delete>
</mapper>