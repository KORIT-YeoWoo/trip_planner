<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.trip_planner_back.mapper.UserMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="UserId">
        insert into users
        values(default, #{oauth2_id}, #{name}, #{nickname}, #{age},
        #{gender}, #phone, #{email}, #{profile_img}, now())
    </insert>
    <select id="findByUserId" resultType="User">
        select
            user_id,
            oauth2_id,
            name,
            nickname,
            age,
            gender,
            phone,
            email,
            profile_img,
            created_at
        from
            users
        where
            user_id = #{userId}
    </select>
    <select id="findByOauth2Id" resultType="User">
        select
            user_id,
            oauth2_id,
            name,
            nickname,
            age,
            gender,
            phone,
            email,
            profile_img,
            created_at
        from
            users
        where
            oauth2_id = #{oauth2Id}
    </select>
    <select id="findByNickname" resultType="User">
        select
            user_id,
            oauth2_id,
            name,
            NULL, --nickname
            age,
            gender,
            phone,
            email,
            profile_img,
            created_at
        from
            users
        where
            nickname = #{nickname}
    </select>
    <update id="updateNickname">
        UPDATE
            user
        SET
            nickname = #{nickname}
        WHERE
            user_id = #{userId}
    </update>

</mapper>